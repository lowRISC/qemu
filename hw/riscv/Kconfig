config MICROCHIP_PFSOC
    bool
    select CADENCE_SDHCI
    select MCHP_PFSOC_DMC
    select MCHP_PFSOC_IOSCB
    select MCHP_PFSOC_MMUART
    select MCHP_PFSOC_SYSREG
    select RISCV_ACLINT
