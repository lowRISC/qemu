config RISCV_NUMA
    bool

config IBEX
    bool

config IBEX_COMMON
    bool

# RISC-V machines in alphabetical order

config OT_DARJEELING
    bool
    select IBEX
    select IBEX_COMMON
    select OT_ADDRESS_SPACE
    select OT_AES
    select OT_ALERT_DARJEELING
    select OT_AON_TIMER
    select OT_AST_DARJEELING
    select OT_CLKMGR
    select OT_CSRNG
    select OT_DEV_PROXY
    select OT_DM_TL
    select OT_DMA
    select OT_EDN
    select OT_ENTROPY_SRC
    select OT_GPIO
    select OT_HMAC
    select OT_IBEX_WRAPPER_DARJEELING
    select OT_KMAC
    select OT_LIFECYCLE
    select OT_MBX
    select OT_OTBN
    select OT_OTP_DARJEELING
    select OT_PINMUX
    select OT_PWRMGR
    select OT_RSTMGR
    select OT_ROM_CTRL
    select OT_SENSOR
    select OT_SOC_PROXY
    select OT_SPI_DEVICE
    select OT_SPI_HOST
    select OT_SRAM_CTRL
    select OT_TIMER
    select OT_UART
    select RISCV_DMI
    select SIFIVE_PLIC

